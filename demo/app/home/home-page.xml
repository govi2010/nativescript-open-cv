<Page class="page"
    navigatingTo="onNavigatingTo"
    xmlns:DrawingPad="nativescript-drawingpad"
    xmlns="http://schemas.nativescript.org/tns.xsd">

    <ActionBar class="action-bar">
        <Label class="action-bar-title" text="Home"></Label>
    </ActionBar>

    <!--<ScrollView>-->
        <StackLayout>
            <DrawingPad:DrawingPad backgroundColor="#ffffff" id="drawingPad" margin="10" height="200" penColor="{{ penColor }}" penWidth="{{ penWidth }}" />

            <Label text="{{ prediction }}" class="message" textWrap="true" row="0" col="1" />
            <StackLayout orientation="horizontal">
                <Button text="Predict" tap="{{ getMyDrawing }}" />
                <Button text="Clear" tap="{{ clearMyDrawing }}" />
            </StackLayout>
            <ScrollView orientation="horizontal">
                <Repeater id="repeaterObj"  items="{{drawingImage}}">
                    <Repeater.itemsLayout>
                        <StackLayout orientation="horizontal" />
                    </Repeater.itemsLayout>
                    <Repeater.itemTemplate >
                        <Image class="picture-stack" stretch="aspectFit" src="{{$value}}" height="300" style="margin: 10"  />
                    </Repeater.itemTemplate>
                </Repeater>
            </ScrollView>
            <!--<Image src="{{ drawingImage }}" height="150" visibility="{{ drawingImage ? 'visible' : 'collapsed' }}" stretch="aspectFit" />-->
        </StackLayout>
    <!--</ScrollView>-->
</Page>
